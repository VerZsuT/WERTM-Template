{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "jsx": "react-jsx",
    "allowJs": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "esnext",
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "newLine": "LF",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    // You also need to write to configs/webpack.aliases.js
    "paths": {
      "main": ["src/main/index"],
      "main/*": ["src/main/*"],
      "renderer": ["src/renderer/index"],
      "renderer/*": ["src/renderer/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["mode_modules"]
}
